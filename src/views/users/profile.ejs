        <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300&display=swap" rel="stylesheet">
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Mulish:wght@600&family=Rubik:ital,wght@1,300&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Mulish:wght@600&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/css/styles-profile.css">
        <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        <title>Mitikal</title>
    </head>
    <body>

             <%- include('../partials/header') %>
            <main>
                <div class="box">
                                    <!-- <img width="30%" src="<%= //locals.user.image %>"> -->
                    <div class="user-profile">
                        <div class="user-avatar">
                            <img src="<%= locals.user.image %>" alt="">
                        </div>
                        <div class="name"><h5 class="user-name"><%= locals.user.name %></h5></div>
                        <div class="email"><h6 class="user-email"><%= locals.user.email %></h6></div>
                        <form action="/users/<%= locals.user.id %>?_method=DELETE" method="POST">
                            <button class="delete-profile" type="submit">Borrar Perfil</button>
                        </form>
                    </div>



                    <div class="formulario">
                        <form action="/users/<%= locals.user.id %>?_method=PATCH" method="POST" enctype="multipart/form-data">
                            <div class="input-container">
                                <label for="name">NOMBRE</label>
                                <input type="text" name="name" id="name" required value="<%= locals.user.name %>" />
                            </div>
                            <div class="input-container">
                                <label for="email">E-Mail</label>
                                <input type="email" name="email" id="email" required value="<%= locals.user.email %>" />
                            </div>
                            <div class="input-container">
                                <label for="tel">TELÃ‰FONO</label>
                                <input type="tel" name="tel" id="tel" required value="<%= locals.user.tel %>" />
                            </div>
                            <div class="input-container">
                                
                                <label for="file-upload" class="subir">
                                    <i class="fas fa-cloud-upload-alt"></i> Cambiar Foto de Perfil
                                </label>
                                <input id="file-upload" name="image" onchange='cambiar()' type="file" style='display: none;'/>
                                
                                <% if (locals.errors && errors.image) { %>
                                    <p class='msg-error'>
                                        <%= errors.image.msg %>
                                    </p>
                                    <% } %>
                            </div>
                            <button class="update-profile" type="submit">Actualizar Perfil</button>
                        

                            
                        </form>
                    </div>
                </div>

                



                
            </main>



    </body>

</html>