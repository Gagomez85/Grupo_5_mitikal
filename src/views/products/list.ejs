<body>
    <!-- Parte superior de la pagina dividido en un box, con tres box internos -->

    <%- include("../partials/header") %>
        <main>

            <div class="container-main-all">
                <h1>Productos</h1>
                <div class="container-body-list">
                    <% productList.forEach((Product) => { %>
                       
                            <div class="colum-list">
                                <div class="producto">
                                    <a href="/products/detailProduct/<%= Product.id%>">
                                    
                                        <img src="<%= Product.image %>" alt="">
                                    </a> 
                                
                                    <div class="description"> 
                                        
                                        <a href="/products/detailProduct/<%= Product.id%>">
                                            <h3 class="nombre_del_producto"><%= Product.name%></h3>
                                            <div class="hide">
                                                <h3 class="precio_del_producto">$ <%= Product.price%></h3>
                                                <h5 class="forma_de_pago"><%= Product.description%></h5>
                                                <a href="*"><i class="fas fa-cart-plus"></i></a>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            </div>
    
                      
                    <% }) %>
                 
